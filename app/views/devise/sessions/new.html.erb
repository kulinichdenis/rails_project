  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
    <div class="form-group">
      <%= f.label :email, :class => 'col-sm-2 control-label', :for => 'inputEmail3' %> 
      <div class="col-sm-10">
        <%= f.email_field :email, :class => 'form-control', :id => 'inputEmail3', autofocus: true %>
      </div>
    </div> 

    <div class="form-group">
      <%= f.label :password, :class => 'col-sm-2 control-label', :for => 'inputPassword3' %> 
      <div class="col-sm-10">
        <%= f.password_field :password, :class => 'form-control', :id => 'inputPassword3', autocomplete: "off" %>
      </div>
    </div>
   
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox" >
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, :style => 'margin-left:1px' %>
        <%= f.label :remember_me %>
      <% end -%>  
      </div>
    </div>
    </div>
  
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">  
        <%= f.submit "Log in", :class => 'btn btn-default' %>
      </div>
    </div>

  <% end %>

  <div class="col-sm-offset-2 col-sm-10">
    <%= render "devise/shared/links" %>  
  </div>
  

