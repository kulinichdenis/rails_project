        Image
      .categories__cell
        %span.categories__item-border 2
    .categories__row
      .categories__cell
        Standart
      .categories__cell
        %span.categories__item-border 2
      .categories__row
      .categories__cell
        Status
      .categories__cell
        %span.categories__item-border 2
    .categories__row
      .categories__cell
        Uncategorized
      .categories__cell
        %span.categories__item-border 2
    .categories__row
      .categories__cell
        Video
      .categories__cell
        %span.categories__item-border 2
