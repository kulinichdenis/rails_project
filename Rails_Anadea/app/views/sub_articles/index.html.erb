<p id="notice"><%= notice %></p>

<h1>Listing Sub Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Article</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_articles.each do |sub_article| %>
      <tr>
        <td><%= sub_article.title %></td>
        <td><%= sub_article.content %></td>
        <td><%= sub_article.user_id %></td>
        <td><%= sub_article.article_id %></td>
        <td><%= link_to 'Show', sub_article %></td>
        <td><%= link_to 'Edit', edit_sub_article_path(sub_article) %></td>
        <td><%= link_to 'Destroy', sub_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

